<h1>Edit <%=@song.name%></h1>

<form action="/songs/<%=@song.slug%>" method="POST">
  <input type="hidden" name="_method" value="PATCH">
  <p>Name: <input type="text" id="name" name="song[name]" value="<%=@song.name%>">
  <p>Artist: <input type="text" id="artist_name" name="artist[name]" value="<%=@song.artist.name%>">
  <% Genre.all.each do |genre| %>
    <p><%=genre.name%></p>
    <input type="checkbox" name="song[genre_ids][]" value="<%=genre.id%>" id="<%=genre.name%>" <%= 'checked' if @song.genre.include?(genre)%>>
  <% end %>

  <input type="submit" value="Save">
</form>
